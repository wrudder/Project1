<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Feed', posts_path %></li>
      <li><%= link_to 'Channels', groups_path %></li>
        <% if @current_user.present? %>
          <li><%= link_to "logout #{@current_user.email}", login_path, :method => 'delete' %>
            <li><%= link_to "Create Post", new_post_path, :method => 'get' %>
              <li><%= link_to "My Account", user_path(@current_user) %>
          <% else %></li>
      <li><%= link_to 'Sign up', new_user_path %></li>
        <li><%= link_to 'Login', login_path %></li>
        <% end %>

    </nav>
    <%= yield %>
  </body>
</html>
