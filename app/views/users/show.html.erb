<h2>My details:</h2>
<%= @user.name %>
  <%= link_to 'Edit or add Profile informaiton', edit_user_path %>

<h2>My posts: </h2>
<% @posts.each do |post| %>
  <div class="post">

    <div class="username">

    </div>
    <div class="title">
      <p><%= post.title %></p>
    </div>

    <div class="description">
    <p><%= post.discription %></p>
    </div>
    <div class="snippet">
       <code><pre><%= CodeRay.scan(post.codesnippet, :HTML).div %></pre></code>
  </div>
  <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%= link_to 'view Post', post_path(post), method: :get %>
  <%# <%= link_to 'Edit Post', edit_user, method: :update %>
<% end %>
