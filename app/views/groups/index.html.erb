<h1 class="channels">Channels</h1>
<div class="row">

  <div class="col-md-12">
    <h3 class="findchannel">Find a Channel: </h3>

    <div class="md-form mt-0">
  <input class="form-control" type="text" placeholder="Search" aria-label="Search">
  </div>
  </div>

  <div class="col-md-12 mychannels">
<h3 class ="mychannels">My Channels:</h3>


  <% @groups.each do |group| %>
    <p><%= group.title %></p>
    <% if @current_user.admin? %>
    <%= link_to 'Manage Users', users_path %>
    <%= link_to 'Delete group', group, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% else %>
    <%= link_to 'View posts', posts_path %>

      <% end %>
    <% end %>
  </div>

</div>
